--повара
CREATE TABLE CHEF_t
(
	ChefID			INT 		    NOT NULL   PRIMARY KEY,
	C_Name			VARCHAR(20)		NOT NULL,
	C_Date_hired	DATE,
	C_Hourly_pay	INT,
	Day_or_night	VARCHAR(5)
);
