INSERT INTO PAYMENT_t VALUES (904, 1600, 'Cash',   3005);
INSERT INTO PAYMENT_t VALUES (905, 2000, 'Cash',   3007);


--блюда
CREATE TABLE FOOD_t
(
	FoodID		INT 	NOT NULL PRIMARY KEY,
	Name		VARCHAR(20),
	Price		INT,
	ChefID		INT 	NOT NULL,

	CONSTRAINT FOOD_FK FOREIGN KEY (ChefID) REFERENCES CHEF_t(ChefID)
);
INSERT INTO FOOD_t VALUES (200, 'Cheeseburger', 	10, 2012);
