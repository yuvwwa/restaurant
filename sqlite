--счет
CREATE TABLE BILL_t
(
	BillNo		INT 		NOT NULL,
	Amount		INT,
	CustID		INT 		NOT NULL PRIMARY KEY,

	CONSTRAINT BILL_FK FOREIGN KEY (CustID) REFERENCES CUSTOMER_t(CustID)
);
INSERT INTO BILL_t VALUES (800, 3500, 3000);
INSERT INTO BILL_t VALUES (801, 4000, 3001);
INSERT INTO BILL_t VALUES (802, 2200, 3002);
INSERT INTO BILL_t VALUES (803, 1500, 3003);
INSERT INTO BILL_t VALUES (804, 1600, 3005);
INSERT INTO BILL_t VALUES (805, 2000, 3007);


--опплата
CREATE TABLE PAYMENT_t
(
	PaymentNo	INT 		NOT NULL PRIMARY KEY,
	Amount		INT,
	Type 		VARCHAR(8),
	CustID		INT 		NOT NULL,

	CONSTRAINT PAYMENT_FK FOREIGN KEY (CustID) REFERENCES BILL_t(CustID)
);
INSERT INTO PAYMENT_t VALUES (900, 3500, 'Debit',  3000);
INSERT INTO PAYMENT_t VALUES (901, 4000, 'Cash',   3001);
