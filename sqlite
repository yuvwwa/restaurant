--столик
CREATE TABLE TABLE_t
(
  TableNo          INT     NOT NULL PRIMARY KEY,
  WaiterID         INT     NOT NULL,

  CONSTRAINT TABLE_FK2 FOREIGN KEY (WaiterID) REFERENCES WAITER_t(WaiterID)
);
INSERT INTO TABLE_t VALUES (100, 2000);
