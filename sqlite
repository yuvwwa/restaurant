--гости
CREATE TABLE CUSTOMER_t
(
	CustID			INT 		NOT NULL PRIMARY KEY,
	Com_Name		VARCHAR(20),
	Phone			VARCHAR(10),
	TableNo			INT			NOT NULL,

	CONSTRAINT CUSTOMER_FK FOREIGN KEY (TableNo) REFERENCES TABLE_t(TableNo)
);
