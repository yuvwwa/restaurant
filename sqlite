--хостесс
CREATE TABLE HOST_t
(
	HostID			INT 		    NOT NULL   PRIMARY KEY,
	H_Name	        VARCHAR(20)		NOT NULL,
    H_Date_hired	DATE,
    H_Hourly_pay	INT
);
